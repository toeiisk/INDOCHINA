      status:
        type: boolean
        example: false
        
  Tutionfeesforeachfaculty:
    required:
      - id
      - faculty
      - tutionfees
    properties:
      id:
        type: integer
        example: 1
      faculty:
        type: string
        example: 'Infomation Technology'
      tutionfees:
        type: string
        example: 32000
  
  Management:
    required:
      - id
