definitions:
  Student:
    required: 
      - id
      - name
      - idstudent
      - faculty
      - tutionfees
      - status
    properties:
      id:
        type: integer
        example: 1
      idstudent:
        type: integer
        example: 61070121
      faculty:
        type: string
        example: 'Information Teachnology'
      tutionfees:
